<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Transaction -->

        <menuitem id="menu_account_wallet" name="Transactions" parent="account.menu_finance" sequence="6"/>

        <record id="view_account_wallet_currency_line_tree" model="ir.ui.view">
            <field name="name">account.wallet.currency.line.tree</field>
            <field name="model">account.wallet.currency.line</field>
            <field name="arch" type="xml">
                <tree string="Currencies" editable="bottom">
                    <field name="price_unit"/>
                    <field name="currency_id" widget="selection"/>
                    <field name="subtotal"/>
                    <field name="model" invisible="1"/>
                    <field name="field" invisible="1"/>
                </tree>
           </field>
        </record>

        <record id="view_account_wallet_transaction_tree" model="ir.ui.view">
            <field name="name">account.wallet.transaction.tree</field>
            <field name="model">account.wallet.transaction</field>
            <field name="arch" type="xml">
                <tree string="Transactions">
                    <field name="model_id"/>
                    <field name="sender_id"/>
                    <field name="receiver_id"/>
                    <field name="total"/>
                    <field name="state"/>
                </tree>
           </field>
        </record>

        <record id="view_account_wallet_transaction_form" model="ir.ui.view">
            <field name="name">account.wallet.transaction.form</field>
            <field name="model">account.wallet.transaction</field>
            <field name="arch" type="xml">
                <form string="Transaction" version="7.0">
                <field name="model_name" invisible="1"/>
                <header attrs="{'invisible': [('model_name','!=','account.wallet.transaction')]}">
                    <button name="transaction_draft_cancel" states="draft" string="Cancel"/>
                    <button name="confirm" states="draft" class="oe_highlight" string="Confirm" type="object"/>
                    <button name="transaction_confirm_cancel" states="confirm" string="Cancel"/>
                    <button name="transaction_confirm_done" states="confirm" class="oe_highlight" string="Confirm that your have received the payment"/>
                    <button name="reset_workflow" states="cancel" string="Put in draft" type="object"/>
                    <button name="reset_workflow" states="done" string="Refund" type="object"/>
                    <button name="transaction_confirm_refund_done" states="confirm_refund" string="Return to done"/>
                    <button name="transaction_confirm_refund_cancel" states="confirm_refund" class="oe_highlight" string="Confirm that you received the payment for the refund"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet string="Transaction">
                    <group>
                        <group>
                            <field name="sender_id" domain="[('user_ids','in',uid)]" attrs="{'readonly': [('model_name','!=','account.wallet.transaction'),('model_name','!=',False)]}"/>
                            <field name="description" attrs="{'readonly': [('model_name','!=','account.wallet.transaction'),('model_name','!=',False)]}"/>
                        </group>
                        <group>
                            <field name="receiver_id" domain="[('user_ids','!=',False)]" attrs="{'readonly': [('model_name','!=','account.wallet.transaction'),('model_name','!=',False)]}"/>
                            <field name="quantity" invisible="1"/>
                        </group>
                    </group>
                    <field name="currency_ids" context="{'default_model': 'account.wallet.transaction'}" attrs="{'readonly': ['|', ('state','!=','draft'),('model_name','!=','account.wallet.transaction'),('model_name','!=',False)]}"/>
                    <field name="move_ids" readonly="1">
                        <tree string="Moves">
                            <field name="name"/>
                            <field name="date"/>
                            <field name="wallet_action"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <field name="is_sender" invisible="1"/>
                    <field name="is_receiver" invisible="1"/>
                    <field name="is_moderator" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="view_account_wallet_transaction_form_admin" model="ir.ui.view">
            <field name="name">account.wallet.transaction.form.admin</field>
            <field name="model">account.wallet.transaction</field>
            <field name="inherit_id" ref="view_account_wallet_transaction_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('group_account_wallet_moderator')])]"/>
            <field name="arch" type="xml">
                <field name="sender_id" position="attributes">
                    <attribute name="domain">[('user_ids','!=',False)]</attribute>
                </field>
            </field>
        </record>

        <record id="view_account_wallet_transaction_search" model="ir.ui.view">
            <field name="name">account.wallet.transaction.search</field>
            <field name="model">account.wallet.transaction</field>
            <field name="arch" type="xml">
               <search string="Transactions">
                    <field name="sender_id"/>
                    <field name="receiver_id"/>
                    <separator/>
                    <filter name="my_transactions" string="My transactions" domain="['|',('sender_id.user_ids','in',uid),('receiver_id.user_ids','in',uid)]" icon="terp-check"/>
                </search>
            </field>
        </record>

        <record id="act_account_wallet_transactions_all" model="ir.actions.act_window">
            <field name="name">All</field>
            <field name="res_model">account.wallet.transaction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_account_wallet_transaction_search"/>
        </record>

        <menuitem action="act_account_wallet_transactions_all" id="menu_act_account_wallet_transactions_all" parent="menu_account_wallet"/>

        <record id="act_account_wallet_transactions_my" model="ir.actions.act_window">
            <field name="name">My transactions</field>
            <field name="res_model">account.wallet.transaction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="domain">['|',('sender_id.user_ids','in',uid),('receiver_id.user_ids','in',uid)]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_account_wallet_transaction_search"/>
        </record>

        <menuitem action="act_account_wallet_transactions_my" id="menu_act_account_wallet_transactions_my" parent="menu_account_wallet"/>


        <!-- Partner -->

        <record id="view_res_partner_wallet_currency_tree" model="ir.ui.view">
            <field name="name">res.partner.wallet.currency.tree</field>
            <field name="model">res.partner.wallet.currency</field>
            <field name="arch" type="xml">
                <tree string="Currencies">
                    <field name="currency_id"/>
                    <field name="limit_negative"/>
                    <field name="limit_negative_value" attrs="{'invisible': [('limit_negative','=',False)]}"/>
                    <field name="limit_positive"/>
                    <field name="limit_positive_value" attrs="{'invisible': [('limit_positive','=',False)]}"/>
                    <field name="available_account"/>
                    <field name="reserved_account"/>
                    <field name="expense_account"/>
                    <field name="income_account"/>
                </tree>
            </field>
        </record>

        <record id="view_res_partner_wallet_currency_form" model="ir.ui.view">
            <field name="name">res.partner.wallet.currency.form</field>
            <field name="model">res.partner.wallet.currency</field>
            <field name="arch" type="xml">
                <form string="Currency">
                    <field name="currency_id"/>
                    <field name="limit_negative"/>
                    <field name="limit_negative_value" attrs="{'invisible': [('limit_negative','=',False)]}"/>
                    <field name="limit_positive"/>
                    <field name="limit_positive_value" attrs="{'invisible': [('limit_positive','=',False)]}"/>
                    <field name="available_account"/>
                    <field name="reserved_account"/>
                    <field name="expense_account"/>
                    <field name="income_account"/>
                </form>
            </field>
        </record>

        <record id="view_partner_form_wallet" model="ir.ui.view">
            <field name="name">partner.form.wallet</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page string="Internal Notes" position="after">
                    <page string="Community">
                        <field name="wallet_balance_ids">
                            <tree string="Balance">
                                <field name="currency_id"/>
                                <field name="limit_negative" invisible="1"/>
                                <field name="limit_negative_value" attrs="{'invisible': [('limit_negative','=',False)]}"/>
                                <field name="limit_positive" invisible="1"/>
                                <field name="limit_positive_value" attrs="{'invisible': [('limit_positive','=',False)]}"/>
                                <field name="available"/>
                                <field name="reserved"/>
                            </tree>
                        </field>
                        <field name="wallet_currency_ids"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
